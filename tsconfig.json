{
    "compilerOptions": {
        "target": "ES2022",
        "module": "Node16",
        "lib": ["ES2022"],
        "moduleResolution": "Node16",
        "rootDir": "src",
        "outDir": "dist",
        "allowSyntheticDefaultImports": true,
        "importHelpers": true,
        "esModuleInterop": true,
        "alwaysStrict": true,
        "sourceMap": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": true,
        "noImplicitThis": false,
        "strictNullChecks": false
    },
    "include": ["src/**/*"],
}
