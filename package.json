{
  "name": "@eneskarpuz/express-ts-starter",
  "version": "1.0.4",
  "description": "Quick Express TypeScript Starter",
  "main": "src/index.ts",
  "scripts": {
    "start": "export NODE_ENV=production && npm run build && node dist/index.js",
    "dev": "export NODE_ENV=development && npm run build && concurrently \"tsc -w\" \"nodemon dist/index.js\"",
    "build": "rm -rf ./build && tsc -p tsconfig.json",
    "lint": "eslint . --ext .ts --ext .mts",
    "format": "eslint . --ext .ts --ext .mts --fix",
    "test": "jest -i --detectOpenHandles --coverage",
    "tsi": "./scripts/typesinstaller.sh"
  },
  "keywords": [],
  "author": "Enes Karpuz",
  "license": "MIT",
  "dependencies": {
    "@tsconfig/node16": "^1.0.3",
    "@types/cors": "^2.8.12",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.14",
    "@types/helmet": "4.0.0",
    "@types/jest": "^29.2.0",
    "@types/joi": "^17.2.3",
    "@types/morgan": "^1.9.3",
    "@types/supertest": "^2.0.12",
    "@types/typescript": "^2.0.0",
    "@types/winston": "^2.4.4",
    "concurrently": "^7.4.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.2",
    "express": "^4.18.1",
    "helmet": "4.6.0",
    "jest": "^29.2.1",
    "joi": "^17.6.3",
    "morgan": "^1.10.0",
    "node-mocks-http": "^1.11.0",
    "nodemon": "^2.0.20",
    "supertest": "^6.3.0",
    "ts-jest": "^29.0.3",
    "typescript": "^4.8.4",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.40.1",
    "@typescript-eslint/parser": "^5.40.1",
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1"
  }
}
